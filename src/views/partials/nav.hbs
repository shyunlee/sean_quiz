<script>
  $(document).ready(function () {
    $.ajax({
      url: "http://localhost:3000/user/me",
      type:"GET",
      xhrFields: { withCredentials: true },
      contentType:"application/json; charset=utf-8",
      success: function(res, status, xhr){
        logout.show()
        login.hide()
        signup.hide()
        let userLevel = res.data.level
        if (userLevel !== 'admin') {
          $('.nav_admin').hide()
        } else {
          $('.nav_admin').show()
        }
      },
      error:function(res){
        $('.nav_admin').hide()
        logout.hide()
        login.show()
        signup.show()
      }
    })
    let userName = $('#username')[0].textContent
    let login = $('.nav_login')
    let signup = $('.nav_signup')
    let logout = $('.nav_logout')
    {{!-- if (userName === '') {
      logout.hide()
      login.show()
      signup.show()
    } else {
      logout.show()
      login.hide()
      signup.hide()
    } --}}
    login.on('click', () => window.location = '/login')
    signup.on('click', () => window.location = '/signup')
    logout.on('click', () => console.log('logout'))

    $('.menu_btn').on('click', (e) => {
      let content = e.target.textContent
      if (content === 'Feedback') {
        window.location = '/feedback'
      } else {
        let category = content.toLowerCase()
        window.location = `/quiz/${category}`
      }
    })
  })
</script>